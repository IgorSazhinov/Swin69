datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id          String   @id @default(cuid())
  status      String   @default("LOBBY") // LOBBY, PLAYING, FINISHED
  deck        String   @default("[]")
  discardPile String   @default("[]")
  currentCard String?
  direction   Int      @default(1)
  turnIndex   Int      @default(0)
  winnerId    String?  // ID победителя
  players     Player[]
  createdAt   DateTime @default(now())
}

model Player {
  id     String @id @default(cuid())
  name   String
  hand   String @default("[]")
  order  Int
  gameId String
  game   Game   @relation(fields: [gameId], references: [id])
}